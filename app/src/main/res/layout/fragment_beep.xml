
<androi.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#a8caec"
tools:context="com.vogella.android.flashbeepshake.Beep">


<TextView
    android:layout_width="321dp"
    android:layout_height="25dp"
    android:layout_marginBottom="8dp"
    android:textAlignment="center"
    android:text="@string/beep_title"
    android:visibility="visible"
    tools:layout_conversion_absoluteHeight="511dp"
    tools:layout_conversion_absoluteWidth="384dp"
    tools:layout_conversion_absoluteX="0dp"
    tools:layout_conversion_absoluteY="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintVertical_bias="0.017"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:layout_editor_absoluteX="41dp" />

<TextView
    android:id="@+id/tv_firstOperand"
    android:layout_width="wrap_content"
    android:layout_height="24dp"
    android:layout_marginRight="8dp"
    android:textAlignment="center"
    android:text="FirstOp"
    tools:layout_conversion_absoluteHeight="16dp"
    tools:layout_conversion_absoluteWidth="58dp"
    tools:layout_conversion_absoluteX="0dp"
    tools:layout_conversion_absoluteY="0dp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.245"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintVertical_bias="0.303" />

<TextView
    android:id="@+id/tv_add"
    android:layout_width="40dp"
    android:layout_height="24dp"
    android:text="+"
    android:textAlignment="center"
    android:textStyle="bold"
    android:layout_marginLeft="145dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintVertical_bias="0.303" />

<TextView
    android:id="@+id/tv_secondOperand"
    android:layout_width="60dp"
    android:layout_height="24dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:textAlignment="center"
    android:text="SecOp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.62"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="151dp" />

<TextView
    android:id="@+id/tv_equal"
    android:layout_width="40dp"
    android:layout_height="24dp"
    android:text="="
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.801"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintVertical_bias="0.303" />

<EditText
    android:id="@+id/et_userInputAdd"
    android:layout_width="133dp"
    android:layout_height="48dp"
    android:ems="10"
    android:inputType="number"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintVertical_bias="0.445"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.502" />



<android.support.constraint.Guideline
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guideline"
    app:layout_constraintGuide_begin="0dp"
    android:orientation="horizontal" />

    <ImageButton
        android:id="@+id/imageButton_Result"
        android:onClick="clickToAdd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/enter_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="104dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.883"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</androi.support.constraint.ConstraintLayout>